<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../Partials/BootStrap.ejs') %>
</head>
<body>
    
    
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand ps-2" href="/">SSO Website</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto">
                
            </ul>
        </div>
    </nav>
    
    <div class="text-center mx-auto mt-1 pt-5" style="width: 480px;">
        <div class="text-center mx-auto mt-1 pt-5" style="width: 480px;">
    
            <h2 class="h3 mb-3 front-weight-normal">Login Page</h2>
            <form action="/Login" method="post">
                <%if(error){%>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <%}%>
                <input class="mt-1 form-control" type="text" name="UserName" placeholder="User Name" required>
                <input class="mt-1 form-control" type="password" name="Password" placeholder="Password" required>
                <div class="mt-3">
                    <button class="form-control btn btn-lg bg-dark btn-dark btn-block" type="submit">Login</button>
                </div>
                
            </form>
            or
            <form action="/RegisterOrg" method="get">
                <button class="form-control btn btn-lg bg-dark btn-dark btn-block" type="submit">Register</button>
            </form>
            <br>

        </div>
    </div>

    


    <div class="text-center mx-auto mt-1 pt-5">
        <div class="text-center mx-auto mt-1 pt-5">
            <%- include('../Partials/Footer.ejs') %>
        </div>
    </div>
</body>
</html>